@model CreatePartFormModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="XCordinate"></label>
        <input asp-for="XCordinate" class="form-control" />
        <span asp-validation-for="XCordinate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="YCordinate"></label>
        <input asp-for="YCordinate" class="form-control" />
        <span asp-validation-for="YCordinate" class="text-danger"></span>
    </div>
    <div>
        <input type="hidden" asp-for="Initialized" value="@DateTime.UtcNow" />
    </div>
    <button type="submit" class="btn btn-default">Create Part</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
